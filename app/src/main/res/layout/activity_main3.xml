<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/display1"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_card1" />

    <ImageView
        android:id="@+id/display2"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/display"
        app:layout_constraintStart_toEndOf="@+id/display1"
        app:layout_constraintTop_toBottomOf="@+id/score_card1" />

    <ImageView
        android:id="@+id/display3"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/display"
        app:layout_constraintEnd_toStartOf="@+id/display4"
        app:layout_constraintTop_toBottomOf="@+id/score_card2" />

    <ImageView
        android:id="@+id/display4"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_card2" />

    <TextView
        android:id="@+id/your_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/display1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display1"
        app:layout_constraintTop_toTopOf="@+id/display1" />

    <TextView
        android:id="@+id/cpu_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/display3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display3"
        app:layout_constraintTop_toTopOf="@+id/display3" />

    <TextView
        android:id="@+id/your_wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/display2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/display1"
        app:layout_constraintTop_toTopOf="@+id/display2" />

    <TextView
        android:id="@+id/cpu_wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/display4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/display3"
        app:layout_constraintTop_toTopOf="@+id/display4" />

    <TextView
        android:id="@+id/y_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUNS"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/display1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display1"
        app:layout_constraintTop_toBottomOf="@+id/your_runs" />

    <TextView
        android:id="@+id/y_wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WICKETS"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/display2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/display1"
        app:layout_constraintTop_toBottomOf="@+id/your_wickets" />

    <TextView
        android:id="@+id/c_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUNS"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/display3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display3"
        app:layout_constraintTop_toBottomOf="@+id/cpu_runs" />


    <TextView
        android:id="@+id/c_wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WICKETS"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/display4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/display3"
        app:layout_constraintTop_toBottomOf="@+id/cpu_wickets" />

    <TextView
        android:id="@+id/y_overs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/purple_700"
        android:text="OVERS : 0.0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/display2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display1"
        app:layout_constraintTop_toBottomOf="@+id/score_card1" />

    <TextView
        android:id="@+id/c_overs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/purple_700"
        android:text="OVERS : 0.0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/display4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/display3"
        app:layout_constraintTop_toBottomOf="@+id/score_card2" />

    <ImageView
        android:id="@+id/box_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/rect1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/score_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_light_green"
        android:text="Your Score"
        android:textColor="@color/prime_back"
        android:textSize="25sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_light_red"
        android:text="BOT Score"
        android:textColor="@color/prime_back"
        android:textSize="25sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/over_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/box_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/over_ball_1"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/over_ball_2"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/over_ball_3"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/over_ball_4"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/over_ball_5"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/over_ball_6"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_tv_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/this_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/teal_700"
        android:text="This Over"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/over_status_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zero"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/btn"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintStart_toStartOf="@+id/box_container"
        app:layout_constraintTop_toTopOf="@+id/box_container" />

    <Button
        android:id="@+id/one"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="@color/btn"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toTopOf="@+id/box_container" />

    <Button
        android:id="@+id/two"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="@color/btn"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintStart_toStartOf="@+id/box_container" />

    <Button
        android:id="@+id/three"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="@color/btn"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintStart_toEndOf="@+id/two" />

    <Button
        android:id="@+id/four"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="@color/btn"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintStart_toStartOf="@+id/box_container" />

    <Button
        android:id="@+id/five"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="@color/btn"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintStart_toEndOf="@+id/four" />

    <Button
        android:id="@+id/six"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/btn"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/box_container"
        app:layout_constraintEnd_toEndOf="@+id/box_container"
        app:layout_constraintStart_toStartOf="@+id/box_container" />

    <ImageView
        android:id="@+id/score_back1"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:src="@drawable/rect"
        app:layout_constraintBottom_toTopOf="@+id/box_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/y_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="63sp"
        app:layout_constraintEnd_toEndOf="@+id/score_back1"
        app:layout_constraintStart_toStartOf="@+id/score_back1"
        app:layout_constraintTop_toTopOf="@+id/score_back1" />

    <ImageView
        android:id="@+id/score_back2"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:src="@drawable/rect"
        app:layout_constraintBottom_toTopOf="@+id/box_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/c_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="63sp"
        app:layout_constraintEnd_toEndOf="@+id/score_back2"
        app:layout_constraintStart_toStartOf="@+id/score_back2"
        app:layout_constraintTop_toTopOf="@+id/score_back2" />

    <TextView
        android:id="@+id/player_card1"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/player_card"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_overs" />

    <TextView
        android:id="@+id/player_card2"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/player_card"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_card1" />

    <TextView
        android:id="@+id/player1_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="@drawable/player_card"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingEnd="10dp"
        android:paddingBottom="2dp"
        android:text="0*"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/player_card"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1_run" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/spinner_bg"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_overs" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:textColor="@android:color/black"
        android:background="@drawable/spinner_bg"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_overs" />


    <TextView
        android:id="@+id/user_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@android:color/holo_blue_light"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/this_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:text="select"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/user_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2_run"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/bowl_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/player_card"
        android:text="0/0 (0.0)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="5dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/player_card1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player_card1"
        app:layout_constraintTop_toBottomOf="@+id/player_card1" />

    <TextView
        android:id="@+id/message"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/box_container"
        app:layout_constraintEnd_toEndOf="@+id/box_container"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/box_container"
        app:layout_constraintTop_toTopOf="@+id/box_container" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/score_card2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/score_card1"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>